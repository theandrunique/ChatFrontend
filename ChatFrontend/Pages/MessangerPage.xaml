<Page x:Class="ChatFrontend.Pages.MessangerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatFrontend.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MessangerPage">

    <Grid Background="#0e1621">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel Orientation="Vertical" x:Name="Chats">
                
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid x:Name="MessagesHeader" Grid.Row="0" Background="#17212b">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBox Text="Very long username"
                             Background="Transparent"
                             BorderThickness="0"
                             FontSize="18"
                             VerticalContentAlignment="Center"
                             FontWeight="Bold"
                             Foreground="#f5f5f5"
                             Margin="15, 0, 0, 0"
                             IsReadOnly="True"/>
                    <TextBox Text="05.05.05 5:55"
                             Background="Transparent"
                             BorderThickness="0"
                             FontSize="14"
                             Foreground="#708499"
                             VerticalContentAlignment="Center"
                             Margin="15, 0, 0, 0"
                             IsReadOnly="True"/>
                </StackPanel>
                <Border HorizontalAlignment="Right"
                        Margin="0, 0, 15, 0"
                        BorderThickness="1"
                        BorderBrush="#1a1a1a"
                        CornerRadius="70">
                    <Image x:Name="ChatWithAvatar"
                           Source="/ChatFrontend;component/Images/icon.png"/>
                    
                </Border>
            </Grid>

            <Grid Grid.Row="1" Margin="15, 5, 15, 5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical" x:Name="MessagesList" >

                    </StackPanel>
                </ScrollViewer>
            </Grid>
            
            <Grid Grid.Row="2">
                <StackPanel Orientation="Horizontal" x:Name="MessageInput" HorizontalAlignment="Center">

                    <Button Style="{StaticResource ButtonStyle}" 
                            x:Name="SendButton"
                            Height="40"
                            Width="40"
                            Padding="10">
                        <Image Margin="5" Source="/ChatFrontend;component/Images/send.png"/>
                    </Button>

                </StackPanel>
            </Grid>
            
        </Grid>
        
    </Grid>
</Page>
