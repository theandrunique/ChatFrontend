<UserControl x:Class="ChatFrontend.Views.Pages.Messenger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatFrontend.Views.Pages"
             xmlns:components="clr-namespace:ChatFrontend.Views.UserControls"
             mc:Ignorable="d">

    <Grid Background="#18181b">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <components:NavigationMenu Grid.Column="0"/>

        <components:ChatsList Grid.Column="1"/>

        <components:Chat Grid.Column="2"/>
    </Grid>
</UserControl>
