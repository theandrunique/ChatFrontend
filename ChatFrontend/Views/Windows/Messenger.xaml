<Window x:Class="ChatFrontend.Views.Windows.Messenger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatFrontend"
        xmlns:vm="clr-namespace:ChatFrontend.ViewModels.Messenger"
        xmlns:components="clr-namespace:ChatFrontend.Views.UserControls"
        mc:Ignorable="d"
        Title="Messenger" 
        Height="700" Width="1200" 
        MinHeight="500" MinWidth="1050" 
        WindowStartupLocation="CenterScreen" 
        Icon="/ChatFrontend;component/Images/icon-black.png">
    <Window.DataContext>
        <vm:MainVM/>
    </Window.DataContext>

    <Grid Background="#18181b">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <components:ChatsList Grid.Column="0"/>

        <components:Chat Grid.Column="1"/>
    </Grid>
</Window>
